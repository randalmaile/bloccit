<!doctype html>
%html{:lang => "en"} 
%head 
  %meta{:charset => "UTF-8"}/ 
  %title Document
%body 
  %h1 New comment to #{@post.title}
  %small
    By: #{@comment.user.name}
  %p
    = @comment.body
  %p
    = link_to "View Comment on site", topic_post_url(@post.topic, @post, anchor: "comment-#{@comment.id}")